@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AutoCare.ViewModels.CarViewModel

<h2>Редактирай кола</h2> 

<form method="post"> 
    <input type="hidden" asp-for="Id" /> 

    <div class="mb-3">
        <label asp-for="Brand" class="form-label">Марка</label>
        <input asp-for="Brand" class="form-control" /> 
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label">Модел</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RegistrationNumber" class="form-label">Рег.Номер</label>
        <input asp-for="RegistrationNumber" class="form-control" />
        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="YearOfManufacture" class="form-label">Година на производство</label>
        <input asp-for="YearOfManufacture" class="form-control" />
        <span asp-validation-for="YearOfManufacture" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Запази</button> 
</form>

<partial name="_ValidationScriptsPartial" /> 
