@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<AutoCare.ViewModels.VignetteVM>

@{
    ViewData["Title"] = "Винетки";

    // Взимаме CarId от URL-а (напр. /Vignettes?carId=3)
    var carIdStr = Context.Request.Query["carId"].ToString();
    int carId = 0;
    int.TryParse(carIdStr, out carId);
}

<div class="container mt-5">

    <h2 class="text-center mb-4" style="font-size: 2rem; font-weight: bold;">
        Винеткa
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center mb-4">
            <a asp-action="Create" asp-route-carId="@carId" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Добави
            </a>
        </div>

        <p class="text-center text-muted">Няма записи за тази кола.</p>
    }
    else
    {
        <div class="d-flex justify-content-center">
            <div class="card shadow-lg border-0" style="width: 460px;">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4" style="font-size: 1.3rem;">
                        <i class="bi bi-ticket-perforated text-secondary"></i>  Информация
                    </h5>

                    @{
                        var x = Model.First();

                        var totalDays = x.ExpiryDate.DayNumber - x.PurchaseDate.DayNumber;
                        string validityText;
                        if (totalDays < 0) totalDays = 0;
                        {
                            int years = totalDays / 365;
                            int remainingDays = totalDays % 365;
                            int months = remainingDays / 30;
                            int days = remainingDays % 30;

                            if (years > 0)
                            {
                                validityText = $"{years} г.";
                            }
                            else if (months > 0)
                            {
                                validityText = $"{months} мес. {days} дни";
                            }
                            else
                            {
                                validityText = $"{days} дни";
                            }
                        
                        }

                    }

                    <div class="text-center">
                        <p><strong>Дата на покупка:</strong> @x.PurchaseDate.ToString("dd.MM.yyyy")</p>
                        <p><strong>Валидна до:</strong> @x.ExpiryDate.ToString("dd.MM.yyyy")</p>
                        <div class="alert alert-info py-2 mt-3">
                               Валидност: @validityText
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-warning me-2">Редактирай</a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@x.Id" />
                                <button class="btn btn-danger">Изтрий</button>
                            </form>
                        </div>
                        <div class="text-center mt-4">
                            <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary">
                                ⬅️ Назад към моите автомобили
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
