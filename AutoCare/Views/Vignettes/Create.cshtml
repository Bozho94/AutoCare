@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AutoCare.ViewModels.VignetteVM

<h2>Добави винетка</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Скрито поле за CarId – идва от URL-а /Vignettes/Create?carId=5 -->
    <input type="hidden" asp-for="CarId" />

    <div class="mb-3">
        <label asp-for="PurchaseDate" class="form-label"></label>
        <input asp-for="PurchaseDate" type="date" class="form-control" />
        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ExpiryDate" class="form-label"></label>
        <input asp-for="ExpiryDate" type="date" class="form-control" />
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Запази</button>
</form>

