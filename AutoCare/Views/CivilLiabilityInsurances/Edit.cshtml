@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CivilLiabilityInsuranceVM

<h2>Редактирай Застраховка "Гражданска Отговорност"</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

	<input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="CarId" />

    <div class="mb-3">
        <label asp-for="InsuranceCompanyName" class="form-label"></label>
        <input asp-for="InsuranceCompanyName" class="form-control" />
        <span asp-validation-for="InsuranceCompanyName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IssueDate" class="form-label"></label>
        <input asp-for="IssueDate" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}/>
        <span asp-validation-for="IssueDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ExpiryDate" class="form-label"></label>
        <input asp-for="ExpiryDate" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}/>
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index"
           asp-route-carId="@Model.CarId"
           class="btn btn-secondary">
            ⬅️ Назад
        </a>

        <button type="submit" class="btn btn-success">Запази</button>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />
