@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AutoCare.ViewModels.TechnicalInspectionVM

<h2>Редактирай технически преглед</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CarId" />

    <div class="mb-3">
        <label asp-for="InspectionDate" class="form-label"></label>
        <input asp-for="InspectionDate" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}  />
        <span asp-validation-for="InspectionDate" class="text-danger"></span>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary">
            ⬅️ Назад към моите автомобили
        </a>

        <button type="submit" class="btn btn-success">Запази</button>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />
