@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<AutoCare.ViewModels.TechnicalInspectionVM>

@{
    ViewData["Title"] = "Технически прегледи";

    var carIdStr = Context.Request.Query["carId"].ToString();
    int carId = 0;
    int.TryParse(carIdStr, out carId);
}

<div class="container mt-5">

    <h2 class="text-center mb-4" style="font-size: 2rem; font-weight: bold;">
        Технически прегледи
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center mb-4">
            <a asp-action="Create" asp-route-carId="@carId" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Добави
            </a>
        </div>

        <p class="text-center text-muted">Няма записи за тази кола.</p>
    }
    else
    {
        <div class="d-flex justify-content-center">
            <div class="card shadow-lg border-0" style="width: 420px;">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4" style="font-size: 1.3rem;">
						<i class="bi bi-clipboard2-check text-secondary"></i> Информация за последен преглед
                    </h5>

                    @foreach (var x in Model)
                    {
                        <div class="text-center">
                            <p><strong>Дата на преглед:</strong> @x.InspectionDate.ToString("dd.MM.yyyy")</p>
                            <p><strong>Валиден до:</strong> @(x.InspectionDate.AddYears(1).ToString("dd.MM.yyyy"))</p>

                            <div class="alert alert-info py-2 mt-3">
                                Прегледът е валиден 1 година.
                            </div>

                            <div class="d-flex justify-content-center mt-3">
                                <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-warning me-2">Редактирай</a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@x.Id" />
                                    <button class="btn btn-danger">Изтрий</button>
                                </form>
                            </div>
                            <div class="text-center mt-4">
                                <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary">
                                    ⬅️ Назад към моите автомобили
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
