@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<AutoCare.ViewModels.TechnicalInspectionVM>

@{
    ViewData["Title"] = "Технически прегледи";

    // Вземаме carId от URL-а (напр. /TechnicalInspections?carId=5)
    var carIdStr = Context.Request.Query["carId"].ToString();
    int carId = 0;
    int.TryParse(carIdStr, out carId);
}

<h2>Технически прегледи</h2>

@if (!Model.Any())
{
    <div class="mb-3">
        <a asp-action="Create" asp-route-carId="@carId" class="btn btn-primary">Добави</a>
    </div>
}

@if (!Model.Any())
{
    <p>Няма записи за тази кола.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Дата на преглед</th>
                <th>Валиден до</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.InspectionDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (Model.Any())
                        {
                            <p>Прегледа е валиден 1 година.</p>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-warning btn-sm">Редактирай</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@x.Id" />
                            <button class="btn btn-danger btn-sm">Изтрий</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
