@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<TechnicalInspectionVM>

@{

    int carId = Model.FirstOrDefault()?.CarId ?? 0;
}

<div class="container mt-5">

    <h2 class="text-center mb-4" style="font-size: 2rem; font-weight: bold;">
        Технически прегледи
    </h2>

   
    <div class="text-center mb-4">
        <a asp-action="Create" asp-route-carId="@carId" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Добави
        </a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">Няма записи за тази кола.</p>

        <div class="text-center mt-4">
            <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary">
                ⬅️ Назад към моите автомобили
            </a>
        </div>
    }
    else
    {
        // най-нов първи
        var ordered = Model.OrderByDescending(x => x.Id).ToList();
        var current = ordered.First();
        var oldRecords = ordered.Skip(1).ToList();
        var today = DateOnly.FromDateTime(DateTime.Today);
        var currentValidTo = current.InspectionDate.AddYears(1);
        bool isCurrentValid = currentValidTo >= today;

        <div class="d-flex justify-content-center mb-4">
            <div class="card shadow-lg border-0" style="width: 420px;">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4" style="font-size: 1.3rem;">
                        <i class="bi bi-clipboard2-check text-secondary"></i> Последен преглед
                    </h5>

                    <div class="text-center">
                        <p><strong>Дата на преглед:</strong> @current.InspectionDate.ToString("dd.MM.yyyy")</p>
                        <p><strong>Валиден до:</strong> @currentValidTo.ToString("dd.MM.yyyy")</p>

                        <div class="alert @(isCurrentValid ? "alert-success" : "alert-danger") py-2 mt-3">
                            @(isCurrentValid ? "✅ Валиден!" : "❌ Изтекъл!")
                        </div>

                        <div class="d-flex justify-content-center mt-3">
                            <a asp-action="Edit" asp-route-id="@current.Id" class="btn btn-warning me-2">Редактирай</a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@current.Id" />
                                <button class="btn btn-danger">Изтрий</button>
                            </form>
                        </div>
                        <div class="text-center mt-4">
                            <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary">
                                ⬅️ Назад към моите автомобили
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (oldRecords.Any())
        {
            <h4 class="mt-5 mb-3">Стари прегледи</h4>

            <div class="row">
                @foreach (var item in oldRecords)
                {
                    var validTo = item.InspectionDate.AddYears(1);
                    bool isValid = validTo >= today;

                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <p><strong>Дата на преглед:</strong> @item.InspectionDate.ToString("dd.MM.yyyy")</p>
                                <p><strong>Валиден до:</strong> @validTo.ToString("dd.MM.yyyy")</p>
                                <p>
                                    <strong>Статус:</strong> @(isValid ? "Валиден" : "Изтекъл")
                                </p>

                                <form asp-action="Delete" method="post" class="mt-2">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button class="btn btn-sm btn-danger">Изтрий</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>
