@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model OilServiceVM

<h2>Добави запис (масло и филтри)</h2>


<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CarId" />

    <div class="mb-3">
        <label asp-for="OilChangeDate" class="form-label"></label>
        <input asp-for="OilChangeDate" type="date" class="form-control" />
        <span asp-validation-for="OilChangeDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OdometerKm" class="form-label"></label>
        <input asp-for="OdometerKm" class="form-control" />
        <span asp-validation-for="OdometerKm" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OilViscosity" class="form-label"></label>
        <input asp-for="OilViscosity" class="form-control" />
        <span asp-validation-for="OilViscosity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OilAndFiltersBrand" class="form-label"></label>
        <input asp-for="OilAndFiltersBrand" class="form-control" />
        <span asp-validation-for="OilAndFiltersBrand" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Запази</button>

</form>

<partial name="_ValidationScriptsPartial" />
