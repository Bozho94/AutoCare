@using AutoCare.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<OilServiceVM>

@{
   
    int carId = Model.FirstOrDefault()?.CarId ?? 0;
}

<div class="container mt-5">

    <h2 class="text-center mb-4" style="font-size: 2rem; font-weight: bold;">
        Масло и филтри
    </h2>

    <div class="text-center mb-4">
        <a asp-action="Create" asp-route-carId="@carId" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Добави
        </a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">Няма записи за тази кола.</p>

        <div class="text-center mt-4">
            <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary">
                ⬅️ Назад към моите автомобили
            </a>
        </div>
    }
    else
    {
        // подреждаме по Id (най-новият запис първи)
        var ordered = Model.OrderByDescending(x => x.Id).ToList();
        var current = ordered.First();
        var oldRecords = ordered.Skip(1).ToList();

        <div class="d-flex justify-content-center mb-4">
            <div class="card shadow-lg border-0" style="width: 460px;">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4" style="font-size: 1.3rem;">
                        <i class="bi bi-droplet text-secondary"></i> Последна смяна
                    </h5>

                    <div class="text-center">
                        <p><strong>Дата на смяна:</strong> @current.OilChangeDate.ToString("dd.MM.yyyy")</p>
                        <p><strong>Пробег:</strong> @current.OdometerKm км</p>
                        <p><strong>Вискозитет:</strong> @current.OilViscosity</p>

                        @if (!string.IsNullOrEmpty(current.OilAndFiltersBrand))
                        {
                            <p><strong>Марка:</strong> @current.OilAndFiltersBrand</p>
                        }

                        <div class="d-flex justify-content-center mt-4">
                            <a asp-action="Edit" asp-route-id="@current.Id" class="btn btn-warning me-2">Редактирай</a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@current.Id" />
                                <button class="btn btn-danger">Изтрий</button>
                            </form>
                        </div>

                        <div class="text-center mt-4">
                            <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary">
                                ⬅️ Назад към моите автомобили
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        @if (oldRecords.Any())
        {
            <h4 class="mt-5 mb-3">Стари записи</h4>

            <div class="row">
                @foreach (var item in oldRecords)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <p><strong>Дата:</strong> @item.OilChangeDate.ToString("dd.MM.yyyy")</p>
                                <p><strong>Пробег:</strong> @item.OdometerKm км</p>

                                @if (!string.IsNullOrEmpty(item.OilViscosity))
                                {
                                    <p><strong>Вискозитет:</strong> @item.OilViscosity</p>
                                }

                                @if (!string.IsNullOrEmpty(item.OilAndFiltersBrand))
                                {
                                    <p><strong>Марка:</strong> @item.OilAndFiltersBrand</p>
                                }

                                <form asp-action="Delete" method="post" class="mt-2">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button class="btn btn-sm btn-danger">Изтрий</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>
